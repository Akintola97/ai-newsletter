version: "3.9"
services:
  newsletter-app:
    build:
      context: .
    container_name: newsletter-app
    restart: always
    env_file:
      - .env
    expose:
      - "3000"
    networks:
      - boltluna-net

networks:
  boltluna-net:
    external: true
